<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="350.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chessapp.chessapp.controller.NewGameController">
    <children>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="350.0" spacing="10.0">
            <children>
                <Label id="playText" text="Jouez aux échecs!" />
                <TextField id="playerNameTextField" fx:id="textFieldPlayerOne" alignment="CENTER" maxWidth="200.0" promptText="Nom du joueur un" />
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button id="createPlayerButton" mnemonicParsing="false" text="Créer joueur 1" />
                  <Button id="importPlayerButton" mnemonicParsing="false" text="Importer joueur 1" />
               </children>
            </HBox>
                <TextField id="playerNameTextField" fx:id="textFieldPlayerTwo" alignment="CENTER" maxWidth="200.0" promptText="Nom du joueur deux" />
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button id="createPlayerButton" mnemonicParsing="false" text="Créer joueur 2" />
                  <Button id="importPlayerButton" mnemonicParsing="false" text="Importer joueur 2" />
               </children>
            </HBox>
                <Button fx:id="playButton" mnemonicParsing="false" onAction="#startGame" text="JOUER">
               <VBox.margin>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </VBox.margin></Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
