<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="350.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chessapp.chessapp.controller.NewGameController">
    <children>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="350.0" spacing="20.0" style="-fx-background-color: #262522;">
            <children>
                <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="45.0" prefWidth="300.0" spacing="5.0" style="-fx-background-color: #3c3b39; -fx-background-radius: 5; -fx-border-radius: 5;" translateY="-75.0">
                    <children>
                        <ImageView fitHeight="17.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/chrono.png" />
                            </image>
                        </ImageView>
                        <Label text="10:00" textFill="#d0dadf" />
                        <ImageView fitHeight="16.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" translateX="95.0">
                            <image>
                                <Image url="@../img/fleche.png" />
                            </image>
                        </ImageView>
                    </children>
                </HBox>

                <!-- Player 1 Section -->
                <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="79.0" prefWidth="300.0" spacing="10.0" style="-fx-background-color: #3c3b39; -fx-background-radius: 10; -fx-border-radius: 10;" translateY="-60.0">
                    <children>
                        <Label prefHeight="41.0" prefWidth="203.0" text="Choisis ton pseudo" textFill="WHITE">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="52.0" prefWidth="300.0" spacing="5.0">
                            <children>
                                <ImageView fitHeight="39.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" translateY="-5.0">
                                    <image>
                                        <Image url="@../img/pawn_w.png" />
                                    </image>
                                </ImageView>
                                <TextField fx:id="textFieldPlayerOne" alignment="CENTER" maxWidth="200.0" promptText="ex : MaîtreDesÉchecs123" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <Button fx:id="importPlayer1Button" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="35.0" prefWidth="180.0" style="-fx-background-color: #3c3b39;" text="Importer le joueur 1" textFill="WHITE" translateY="-60.0" />

                <!-- Player 2 Section -->
                <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="79.0" prefWidth="300.0" spacing="10.0" style="-fx-background-color: #3c3b39; -fx-background-radius: 10; -fx-border-radius: 10;" translateY="-60.0">
                    <children>
                        <Label prefHeight="41.0" prefWidth="203.0" text="Choisis ton pseudo" textFill="WHITE">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="52.0" prefWidth="300.0" spacing="5.0">
                            <children>
                                <ImageView fitHeight="39.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true" translateY="-5.0">
                                    <image>
                                        <Image url="@../img/pawn_b.png" />
                                    </image>
                                </ImageView>
                                <TextField fx:id="textFieldPlayerTwo" alignment="CENTER" maxWidth="200.0" promptText="ex : MaîtreDesÉchecs123" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <Button fx:id="importPlayer2Button" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="35.0" prefWidth="180.0" style="-fx-background-color: #3c3b39;" text="Importer le joueur 2" textFill="WHITE" translateY="-60.0" />

                <!-- Play Button -->
                <Button fx:id="playButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#startGame" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: #80b54b;" text="Jouer" textFill="WHITE">
                    <font>
                        <Font name="Inter Semi Bold" size="20.0" />
                    </font>
                </Button>

            </children>
        </VBox>
    </children>
</AnchorPane>
