<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="vboxDetailedStats" prefHeight="600.0" prefWidth="350.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chessapp.chessapp.controller.TournamentController">
        <VBox alignment="TOP_CENTER" maxHeight="650.0" maxWidth="350.0" minHeight="650.0" minWidth="350.0" spacing="10.0">
            <children>
                <Label id="tournamentCurrentRound" fx:id="tournamentCurrentRound" text="Tour X" textFill="WHITE" />
                <Label id="tournamentCurrentMatch" fx:id="tournamentCurrentMatch" layoutX="144.0" layoutY="20.0" text="BLABLA VS BLABLA" textFill="WHITE" />
                <TextField id="tournamentPlayersTextField" fx:id="tournamentPlayersTextField" alignment="TOP_CENTER" maxWidth="250.0" prefHeight="75.0" prefWidth="250.0" promptText="Noms des joueurs participants au tournoi" />
                <Button mnemonicParsing="false" onAction="#beginTournament" text="Que le tournoi commence!" />
         <Label id="tournamentCurrentMatch" fx:id="tournamentInfoLabel" alignment="CENTER" maxWidth="300.0" text="Information utilisateur" textAlignment="CENTER" textFill="WHITE" wrapText="true" />
            </children>
            <padding>
                <Insets top="10.0" />
            </padding>
        </VBox>

</AnchorPane>
